# Environment Configuration
ENVIRONMENT=development

# Processing Modes
SINGLE_RUN_MODE=true
AUTO_PATCH=true
AUTO_ADVANCE=false
USE_BATCH_API=false

# Quality Gates
MIN_NRR=0.92
MIN_FPR=0.985
MIN_SS=0.90
MIN_TOKEN_REDUCTION=20

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=document_processor
REDIS_URL=redis://localhost:6379

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Batch Processing
MAX_BATCH_SIZE=1000
BATCH_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_BATCHES=5

# Safety Settings
MAX_AUTO_PATCH_ATTEMPTS=3
OSCILLATION_PREVENTION=true
AUTO_ROLLBACK=true
WHITELIST_DSL_ONLY=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
